rabbitmq: &rabbitmq_defaults
  host: <%= ENV['AMQP_HOST'] || ['localhost'] %>
  port: <%= ENV['AMQP_PORT'] || 5672 %>
  exchange: <%= ENV['AMQP_EXCHANGE'] || 'thundercats.messages' %>
  vhost: <%= ENV['AMQP_VHOST'] || '/' %>
  user: <%= ENV['AMQP_USER'] || 'guest' %>
  password: <%= ENV['AMQP_PWD'] || 'guest' %>
  log_level: 2
  log_filename: rabbitmq.log
  log_age: daily

retries_in_rabbit_mq: &retries_defaults
  retry_attempts: 3
  retry_delay_in_seconds: 600

redis: &redis
  host: 'localhost'
  port: 6379
  db: 'hovercat'
  retry_queue_name: 'default'

development:
  hovercat:
    rabbitmq:
      <<: *rabbitmq_defaults
      host: ['localhost']
    retries_in_rabbit_mq:
      <<: *retries_defaults
      retry_delay_in_seconds: 10
    redis:
      <<: *redis

test:
  hovercat:
    rabbitmq:
      <<: *rabbitmq_defaults
      host: ['localhost']
    retries_in_rabbit_mq:
      <<: *retries_defaults
    redis:
      <<: *redis

staging:
  hovercat:
    rabbitmq:
      <<: *rabbitmq_defaults
    retries_in_rabbit_mq:
      <<: *retries_defaults
    redis:
      <<: *redis

production:
  hovercat:
    rabbitmq:
      <<: *rabbitmq_defaults
    retries_in_rabbit_mq:
      <<: *retries_defaults
    redis:
      <<: *redis
